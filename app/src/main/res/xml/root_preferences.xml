<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/stream_destination_header">

        <EditTextPreference
            app:key="signature"
            app:title="@string/destination_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/stream_quality_header">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="@string/resolution_title" />

        <SwitchPreferenceCompat
            app:dependency="sync"
            app:key="attachment"
            app:title="@string/bitrate_title" />

    </PreferenceCategory>
    <PreferenceCategory android:title="@string/notifications_header">

    </PreferenceCategory>

</PreferenceScreen>